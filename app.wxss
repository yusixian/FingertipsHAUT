/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
/* 卡片 */
.card {
  border-radius: 13px;
  /* background: rgba(189,206,229, 0.4); */
  box-shadow:  3px 3px 8px gray;
  margin: 15rpx 48rpx;  /* 外边距上下 左右 */
  padding: 15rpx 30rpx; /*内边距上下 左右*/
  width: 100%;
}

.card-title {
  color:gray;
  font-size: 30rpx;
  font-weight: bold;
}

.card-brief {
  font-size: 25rpx;
  margin-top: 9rpx;
  color:gray
}
.box {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20px;
  padding: 0 20rpx;  /*内边距上下 左右*/
  margin: 15rpx 0;
  gap: 40rpx;
  width: 100%;
  background-color: white;
  /*margin: 5rpx 20rpx;  外边距上下 左*/
}
.box .item {
  border-radius: 13px;
  border-color: black;
  /* background: white; */
  box-shadow:  3px 3px 8px white;
  margin:  10rpx 0;  /* 外边距上下 左右 */
  padding: 15rpx 30rpx; /*内边距上下 左右*/
  width: 100%;
  justify-content: center;
}
.box .item .title {
  color:black;
  font-size: 38rpx;
  font-weight: bold;
  align-items: center;
}
.box .item .brief {
  font-size: 30rpx;
  margin-top: 9rpx;
  color:black;
}